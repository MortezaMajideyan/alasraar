<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/pattern_background"
    android:fillViewport="true"
    >
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    >
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:srcCompat="@drawable/ic_islimi_half"
    android:scaleType="fitXY"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#292b30"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <com.thebrownarrow.customfont.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:custom_typeface="@string/font_bold"
                android:text="@string/show_natijeh_estekhareh"
                android:layout_marginTop="20dp"
                android:textColor="#cb9e69"
                android:id="@+id/show_titleText"
                android:gravity="center"
                android:textSize="22sp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#C4C4C6"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:visibility="gone"
                android:id="@+id/ezdevaj_card"
                android:layout_marginBottom="10dp"
                app:cardElevation="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <com.thebrownarrow.customfont.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:custom_typeface="@string/font_light"
                        android:id="@+id/show_ezdevaj"
                        android:gravity="center"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.thebrownarrow.customfont.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:custom_typeface="@string/font_light"
                android:textColor="#82848A"
                android:id="@+id/show_Content"
                android:gravity="center"
                android:textSize="20sp"
                android:visibility="gone"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#C4C4C6"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="15dp"
                android:id="@+id/content_card"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:custom_typeface="@string/font_light"
                   android:id="@+id/show_titleContent"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/result_ozviat"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/button"
                            android:scaleType="centerCrop"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/ozviat"
                            android:id="@+id/ozviat_txt"
                            android:textColor="#fff"
                            android:layout_marginStart="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="16sp"
                            app:custom_typeface="@string/font_bold" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/rv"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_slimi_half_bottom"
        android:scaleType="fitXY"
        />

</LinearLayout>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>