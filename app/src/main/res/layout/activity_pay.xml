<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pattern_background"
        android:scaleType="centerCrop"
        />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_dialog"
    android:gravity="center"
    android:layout_centerVertical="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        app:srcCompat="@drawable/ic_islimi_half"
        android:scaleType="fitXY"
        tools:ignore="VectorDrawableCompat" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_back"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:layout_width="@dimen/image_logo"
                android:layout_height="@dimen/image_logo"
                app:srcCompat="@drawable/ic_dialog_sarketab"
                tools:ignore="VectorDrawableCompat" />
            <com.thebrownarrow.customfont.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:custom_typeface="@string/font_bold"
                android:layout_centerVertical="true"
                android:text="@string/sarketab"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="@dimen/textsize"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <com.thebrownarrow.customfont.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_typeface="@string/font_bold"
            android:layout_gravity="center"
            android:text="@string/sarketabShterak"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/title"
            android:textSize="@dimen/textsize1"
            android:layout_marginTop="10dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C4C4C6"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/content_card"
            android:layout_marginBottom="10dp"
            app:cardElevation="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_typeface="@string/font_bold"
                    android:layout_gravity="center"
                    android:textColor="#757575"
                    android:id="@+id/contentInfo"
                    android:text="@string/sarketab_shterak_info"
                    android:gravity="center"
                    android:textSize="@dimen/dialog_content"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceLayout"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/priceOffLayout"
                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_alignStart="@+id/priceOff"
                            android:layout_centerInParent="true"
                            android:layout_alignEnd="@+id/priceOff"
                            android:background="#757575" />
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:custom_typeface="@string/font_bold"
                            android:textColor="#757575"
                            android:id="@+id/priceOff"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:text="4500"
                            android:includeFontPadding="false"
                            android:gravity="center"
                            android:textSize="@dimen/textsize1"
                            />
                    </RelativeLayout>

                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:custom_typeface="@string/font_bold"
                    android:textColor="#cb9e69"
                    android:id="@+id/price"
                    android:text="3400"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:textSize="@dimen/textsize1"
                    />
                </LinearLayout>

                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_typeface="@string/font_bold"
                    android:layout_gravity="center"
                    android:textColor="#cb9e69"
                    android:id="@+id/payBefore"
                    android:visibility="gone"
                    android:text="@string/payedBefore"
                    android:gravity="center"
                    android:textSize="@dimen/dialog_content"

                    />
                <RelativeLayout
                    android:layout_width="@dimen/rv_width"
                    android:layout_height="@dimen/rv_height"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/pay_btn"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/button"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <com.thebrownarrow.customfont.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/payText"
                        android:textColor="#fff"
                        android:layout_marginStart="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/dialog_content"
                        app:custom_typeface="@string/font_bold" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        app:srcCompat="@drawable/ic_slimi_half_bottom"
        android:scaleType="fitXY"
        tools:ignore="VectorDrawableCompat" />

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:background="@drawable/gradiant_background"
        android:id="@+id/loading"
        android:visibility="gone"
        >

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"


            />
    </RelativeLayout>

</RelativeLayout>