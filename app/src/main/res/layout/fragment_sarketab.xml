<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/pattern_background"
    android:layout_gravity="center"
    android:gravity="center">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="@dimen/image_back_w"
            android:layout_height="@dimen/image_back_h"
            android:layout_centerVertical="true"
            android:id="@+id/sarketab_back"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_back_activity"
            tools:ignore="VectorDrawableCompat" />

        <com.thebrownarrow.customfont.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/sarketab"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_toggle"
            app:custom_typeface="@string/font_light" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/image_size_head"
            android:layout_height="@dimen/image_size_head"
            android:background="@drawable/shape_circle_dark"
            android:padding="@dimen/image_padding_head"
            android:id="@+id/icon_layout"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_male"
                android:id="@+id/image"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/choose"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_rectangle_rounded"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/male_layout"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/male_image"

                    />
                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/man"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_toggle"
                    app:custom_typeface="@string/font_light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/female_layout"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/button"
                    android:visibility="gone"
                    android:id="@+id/female_image"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/woman"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_toggle"
                    app:custom_typeface="@string/font_light" />

            </RelativeLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#D8D8D8"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margin_left_right_card"
            android:layout_marginRight="@dimen/margin_left_right_card"
            android:layout_below="@+id/choose"
            app:cardCornerRadius="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/margin_left_right_card"
                android:layout_marginStart="@dimen/margin_left_right_card"
                android:layout_marginBottom="5dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    >

                    <com.thebrownarrow.customfont.CustomFontEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:id="@+id/sarketab_name"
                        android:hint="@string/name"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_light"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:importantForAutofill="no"/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_rectangle"
                        >
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_alignParentStart="true"
                            android:text="0"
                            android:id="@+id/sarketab_name_number"
                            android:textColor="#fff"
                            android:layout_marginStart="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/font_size_input"
                            app:custom_typeface="@string/font_light" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <com.thebrownarrow.customfont.CustomFontEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="@string/mother"
                        android:id="@+id/sarketab_mother_name"
                        android:background="@null"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_light"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:importantForAutofill="no"/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_rectangle"
                        >
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_alignParentStart="true"
                            android:text="0"
                            android:textColor="#fff"
                            android:id="@+id/sarketab_mother_name_number"
                            android:layout_marginStart="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/font_size_input"
                            app:custom_typeface="@string/font_light" />
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/width_item_date"
                        android:layout_height="@dimen/height_item_date"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#D8D8D8">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month_birtday"
                            android:textSize="10dp"
                            android:layout_gravity="center|top">

                        </TextView>
                        <Spinner
                            android:id="@+id/spinner_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:spinnerMode="dropdown" />



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/width_item_date"
                        android:layout_height="@dimen/height_item_date"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#D8D8D8">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birthday"
                            android:textSize="10dp"
                            android:layout_gravity="center|top">

                        </TextView>
                        <Spinner
                            android:id="@+id/spinner_day"
                            android:layout_width="@dimen/width_item_date"
                            android:layout_height="@dimen/height_item_date"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:spinnerMode="dropdown"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="@dimen/btn_submit_w"
                    android:layout_height="@dimen/btn_submit_h"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sarketab_natijeh"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/button"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <com.thebrownarrow.customfont.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sarketab"
                        android:textColor="#fff"
                        android:layout_marginStart="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_bold" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>