<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/pattern_background">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action_bar"
        >
        <ImageView
            android:layout_width="@dimen/image_back_w"
            android:layout_height="@dimen/image_back_h"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/eghamat_back"
            app:srcCompat="@drawable/ic_back_activity"
            tools:ignore="VectorDrawableCompat" />

        <com.thebrownarrow.customfont.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/eghamat"
            android:textColor="#fff"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/font_size_input"
            app:custom_typeface="@string/font_light" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <RelativeLayout
            android:layout_width="@dimen/image_size_head"
            android:layout_height="@dimen/image_size_head"
            android:background="@drawable/shape_circle_dark"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/image_padding_head"
            android:id="@+id/icon_layout"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_eghamat"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#D8D8D8"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margin_left_right_card"
            android:layout_marginRight="@dimen/margin_left_right_card"
            app:cardCornerRadius="10dp"
            android:padding="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="@dimen/margin_left_right_card"
                android:paddingStart="@dimen/margin_left_right_card"
                android:paddingBottom="5dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    >

                    <com.thebrownarrow.customfont.CustomFontEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/name"
                        android:id="@+id/eghamat_name"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_light"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:importantForAutofill="no"/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_rectangle"
                        >
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_alignParentStart="true"
                            android:text="0"
                            android:id="@+id/eghamat_name_sum"
                            android:textColor="#fff"
                            android:layout_marginStart="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/font_size_input"
                            app:custom_typeface="@string/font_light" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <com.thebrownarrow.customfont.CustomFontEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="@string/mother"
                        android:background="@null"
                        android:id="@+id/eghamat_mother_name"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_light"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:importantForAutofill="no"/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_rectangle"
                        >
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_alignParentStart="true"
                            android:text="0"
                            android:id="@+id/eghamat_mother_name_sum"
                            android:textColor="#fff"
                            android:layout_marginStart="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/font_size_input"
                            app:custom_typeface="@string/font_light" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <com.thebrownarrow.customfont.CustomFontEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="@string/city"
                        android:background="@null"
                        android:id="@+id/eghamat_city"
                        android:textSize="16sp"
                        app:custom_typeface="@string/font_light"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:importantForAutofill="no"/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_rectangle"
                        >
                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_alignParentStart="true"
                            android:text="0"
                            android:id="@+id/eghamat_city_sum"
                            android:textColor="#fff"
                            android:layout_marginStart="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="17sp"
                            app:custom_typeface="@string/font_light" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/eghamat_natijeh"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/button"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <com.thebrownarrow.customfont.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/natijeh"
                        android:textColor="#fff"
                        android:layout_marginStart="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_bold" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>