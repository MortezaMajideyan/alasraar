<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/pattern_background">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="@dimen/image_back_w"
            android:layout_height="@dimen/image_back_h"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_back_activity"
            tools:ignore="VectorDrawableCompat"
            android:id="@+id/back"/>

        <com.thebrownarrow.customfont.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/estekhareh"
            android:textColor="#fff"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/font_size_input"
            app:custom_typeface="@string/font_light" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="@dimen/image_size_head"
            android:layout_height="@dimen/image_size_head"
            android:background="@drawable/shape_circle_dark"
            android:padding="@dimen/image_padding_head"
            android:id="@+id/icon_layout"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_abjad"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#D8D8D8"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/margin_left_right_card"
            android:layout_marginRight="@dimen/margin_left_right_card"
            app:cardCornerRadius="10dp"
            android:padding="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="@dimen/margin_left_right_card"
                android:paddingStart="@dimen/margin_left_right_card"
                android:paddingBottom="5dp"
                >

                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/abjad_text"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/font_size_input"
                    android:layout_marginBottom="5dp"
                    app:custom_typeface="@string/font_light" />
                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/abjad_text1"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="13sp"
                    app:custom_typeface="@string/font_light" />

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/estekhareh_generate"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/button"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <com.thebrownarrow.customfont.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/click1"
                        android:textColor="#fff"
                        android:id="@+id/clickText"
                        android:layout_marginStart="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        tools:ignore="NestedWeights">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            android:layout_margin="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.thebrownarrow.customfont.CustomFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:id="@+id/estekhareh_Name3"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    app:custom_typeface="@string/font_light" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            android:layout_margin="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.thebrownarrow.customfont.CustomFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:id="@+id/estekhareh_Name2"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    app:custom_typeface="@string/font_light" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            android:layout_margin="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.thebrownarrow.customfont.CustomFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:id="@+id/estekhareh_Name1"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    app:custom_typeface="@string/font_light" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>



                </LinearLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/estekhareh_Natijeh"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/button"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <com.thebrownarrow.customfont.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/show_estekhareh"
                        android:textColor="#fff"
                        android:layout_marginStart="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_input"
                        app:custom_typeface="@string/font_bold" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>